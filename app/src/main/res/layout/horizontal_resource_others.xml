<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other Section"
            android:fontFamily="@font/roboto_medium"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:gravity="center|center_horizontal"
            android:layout_gravity="center"
    />

    <HorizontalScrollView

            android:id="@+id/horizontalScrollView2"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:paddingTop="20dp">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <android.support.v7.widget.CardView
                    android:layout_width="110dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="130dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/texture4"
                        android:backgroundTint="#fff"
                        android:contentDescription="xD"
                        android:layout_height="match_parent"
                />
                <TextView
                        android:text="video"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_height="35dp"
                        android:gravity="center" android:layout_gravity="bottom|center"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@android:dimen/app_icon_size"
                        app:srcCompat="@drawable/ic_video_library_black_24dp"
                        android:layout_gravity="center"/>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="130dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/texture2"
                        android:contentDescription="xD"
                        android:layout_height="match_parent"
                />
                <TextView
                        android:text="Old Murlis"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_height="35dp"
                        android:gravity="center" android:layout_gravity="bottom|center"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@android:dimen/app_icon_size"
                        app:srcCompat="@drawable/ic_library_books_black_24dp"
                        android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="130dp"
            >
                <ImageView
                        android:layout_width="match_parent"
                        android:scaleType="center"
                        android:src="@drawable/texture1"
                        android:contentDescription="xD"
                        android:layout_height="match_parent"
                />
                <TextView
                        android:text="English Course"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_height="35dp"
                        android:gravity="center" android:layout_gravity="bottom|center"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@android:dimen/app_icon_size"
                        app:srcCompat="@drawable/ic_library_books_black_24dp"
                        android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    android:layout_width="90dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp"
                    android:layout_height="130dp"
            >
                <ImageView
                        android:layout_width="90dp"
                        android:scaleType="center"
                        android:src="@drawable/texture3"
                        android:contentDescription="xD"
                        android:layout_height="match_parent"
                />
                <TextView
                        android:text="Hindi  Course"
                        android:layout_width="match_parent"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_height="35dp"
                        android:gravity="center" android:layout_gravity="bottom|center"/>
                <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@android:dimen/app_icon_size"
                        app:srcCompat="@drawable/ic_queue_music_black_24dp"
                        android:layout_gravity="center"/>
            </android.support.v7.widget.CardView>



        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>